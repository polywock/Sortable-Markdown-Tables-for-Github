{
  "name": "Sortable Tables for GitHub",
  "version": "1.4",
  "description": "Makes GitHub markdown tables sortable.",
  "manifest_version": 3,
  "permissions": ["storage"],
  "icons": { 
    "128": "128.png" 
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"]
    }
  ]
}